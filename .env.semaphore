# Database Configuration
SEMAPHORE_DB_PASSWORD=semaphore_secure_password_change_me

# Admin User (initial setup)
SEMAPHORE_ADMIN_USER=admin
SEMAPHORE_ADMIN_PASSWORD=changeme_secure_password
SEMAPHORE_ADMIN_NAME=Administrator
SEMAPHORE_ADMIN_EMAIL=admin@example.com

# Security
SEMAPHORE_ACCESS_KEY=your-secret-encryption-key-change-me-32chars

# Web Configuration
SEMAPHORE_PORT=3000
SEMAPHORE_WEB_ROOT=http://localhost:3000

# Ansible Project Path (absolute path to your unified-ansible-project)
ANSIBLE_PROJECT_PATH=/opt/unified-ansible-project

# SSH Key Path (for deployments)
SSH_KEY_PATH=/opt/unified-ansible-project/.ssh
