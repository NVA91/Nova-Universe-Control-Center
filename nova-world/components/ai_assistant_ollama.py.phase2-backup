"""
DEPRECATED: Backward Compatibility Wrapper
Use: from components.ai import get_ai_assistant
"""

import warnings
from components.ai import get_ai_assistant as _get_ai_assistant


def get_ai_assistant():
    """
    DEPRECATED: Use components.ai.get_ai_assistant(mode="ollama")
    
    This wrapper is kept for backward compatibility.
    """
    warnings.warn(
        "ai_assistant_ollama.get_ai_assistant() is deprecated. "
        "Use: from components.ai import get_ai_assistant",
        DeprecationWarning,
        stacklevel=2
    )
    return _get_ai_assistant(mode="ollama")


# Backward compatible class name
AIAssistantOllama = type('AIAssistantOllama', (), {
    '__init__': lambda self: warnings.warn(
        "AIAssistantOllama is deprecated. Use components.ai.get_ai_assistant()",
        DeprecationWarning
    )
})
