# ============================================================================
# Secrets Configuration - Nova-World Dashboard
# ============================================================================
# WICHTIG: Kopiere diese Datei zu secrets.toml und fülle die Werte aus
# secrets.toml ist in .gitignore und wird NICHT committed!
#
# Verwendung:
#   cp .streamlit/secrets.toml.example .streamlit/secrets.toml
#   nano .streamlit/secrets.toml

# ============================================================================
# OpenAI Configuration
# ============================================================================
[openai]
api_key = "sk-..."  # Dein OpenAI API Key
model = "gpt-4"     # Model für AI Assistant
whisper_model = "whisper-1"  # Model für Speech-to-Text

# ============================================================================
# Semaphore Configuration
# ============================================================================
[semaphore]
url = "http://localhost:3000"
api_token = ""  # Optional: Semaphore API Token
project_id = 1  # Semaphore Project ID

# ============================================================================
# Security Configuration
# ============================================================================
[security]
jwt_secret = ""  # Generiere mit: openssl rand -hex 32
session_timeout = 86400  # 24 hours in seconds

# ============================================================================
# Passkey Configuration (Optional - für zukünftige Erweiterung)
# ============================================================================
[passkey]
rp_id = "nova.local"
rp_name = "Nova World"

# ============================================================================
# System Configuration
# ============================================================================
[system]
ansible_project_path = "/home/ubuntu/unified-ansible-project"
docker_socket = "unix:///var/run/docker.sock"

# ============================================================================
# Feature Flags
# ============================================================================
[features]
voice_control_enabled = true
ai_assistant_enabled = true
self_hosted_whisper = false  # Set to true wenn Self-Hosted Whisper läuft
